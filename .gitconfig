[user]
	name = PntAndCnt
	email = peanutandchestnut@gmail.com
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore
[merge]
	tool = vimdiff3
[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[alias]
	dotfiles = !git --git-dir=$HOME/.dotfiles --work-tree=$HOME
[diff]
	tool = vimdiff
[difftool]
	prompt = false
